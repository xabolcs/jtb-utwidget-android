<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:focusable="true"
	style="@style/WidgetBackground">

	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_marginRight="4dp" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" android:src="@drawable/icon" />

	<TextView android:text="uptime" android:layout_height="wrap_content"
		android:layout_below="@+id/icon" android:layout_alignLeft="@+id/icon"
		android:singleLine="true" android:includeFontPadding="false"
		style="@style/Text.Caption" android:layout_width="wrap_content" />

	<TextView android:id="@+id/days_text" android:text="898"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginTop="14dip" android:singleLine="true"
		android:typeface="monospace" style="@style/Text.ValueLand" />

	<TextView android:id="@+id/days_label" android:text="@string/days"
		android:layout_marginTop="1dip" android:layout_width="wrap_content"
		android:layout_alignTop="@+id/days_text" android:layout_toRightOf="@id/days_text"
		android:layout_height="wrap_content" android:singleLine="true"
		style="@style/Text.LabelLand" android:includeFontPadding="false" />

	<TextView android:id="@+id/hours_text" android:text="1"
		android:layout_height="wrap_content" android:layout_below="@+id/days_text"
		android:singleLine="true" style="@style/Text.ValueLand"
		android:typeface="monospace" android:includeFontPadding="false"
		android:layout_width="wrap_content" />

	<TextView android:id="@+id/hours_label" android:text="@string/hours"
		android:layout_width="wrap_content" android:layout_toRightOf="@id/hours_text"
		android:layout_alignTop="@id/hours_text" android:layout_height="wrap_content"
		android:includeFontPadding="false" android:singleLine="true"
		style="@style/Text.LabelLand" />

	<TextView android:id="@+id/mins_text" android:text="1"
		android:layout_height="wrap_content" android:layout_below="@+id/hours_text"
		android:singleLine="true" android:includeFontPadding="false"
		style="@style/Text.ValueLand" android:typeface="monospace"
		android:layout_width="wrap_content" />

	<TextView android:id="@+id/mins_label" android:text="@string/mins"
		android:layout_width="wrap_content" android:layout_toRightOf="@id/mins_text"
		android:layout_alignTop="@id/mins_text" android:layout_height="wrap_content"
		android:includeFontPadding="false" android:singleLine="true"
		style="@style/Text.LabelLand" />

</RelativeLayout>

