<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:focusable="true"
	style="@style/LightTransparent.Background">

	<TextView android:id="@+id/percent_text" android:text="98.1%"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:singleLine="true" android:typeface="monospace"
		style="@style/Text.Percent"
		android:layout_centerInParent="true" />

	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_marginLeft="10dip" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:src="@drawable/icon_small" />

	<TextView android:id="@+id/uptime_text" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/icon" android:layout_alignBottom="@+id/icon"
		android:singleLine="true" android:includeFontPadding="false"
		style="@style/LightTransparent.Text.Caption" android:layout_width="wrap_content" />

</RelativeLayout>

