<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    style="@style/LightTransparent.Background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true" >

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="18dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="10dip" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_small" />

    <TextView
        android:id="@+id/uptime_text"
        style="@style/LightTransparent.Text.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:includeFontPadding="false"
        android:singleLine="true" />

    <TextView
        android:id="@+id/days_text"
        style="@style/LightTransparent.Text.ValuePort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/icon"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="2dip"
        android:singleLine="true"
        android:text="898"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/days_label"
        style="@style/LightTransparent.Text.LabelLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/days_text"
        android:layout_toRightOf="@id/days_text"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/days" />

    <TextView
        android:id="@+id/hours_text"
        style="@style/LightTransparent.Text.ValuePort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/days_text"
        android:layout_marginLeft="4dip"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="1"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/hours_label"
        style="@style/LightTransparent.Text.LabelLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/hours_text"
        android:layout_toRightOf="@id/hours_text"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/hours" />

    <TextView
        android:id="@+id/mins_text"
        style="@style/LightTransparent.Text.ValuePort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hours_text"
        android:layout_marginLeft="4dip"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="1"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/mins_label"
        style="@style/LightTransparent.Text.LabelLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mins_text"
        android:layout_toRightOf="@id/mins_text"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/mins" />

    <TextView
        android:id="@+id/maxdays_text"
        style="@style/LightTransparent.Text.ValuePortMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/days_label"
        android:singleLine="true"
        android:text="898"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/maxdays_label"
        style="@style/LightTransparent.Text.LabelPortMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/maxdays_text"
        android:layout_toRightOf="@id/maxdays_text"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/days" />

    <TextView
        android:id="@+id/maxhours_text"
        style="@style/LightTransparent.Text.ValuePortMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/maxdays_text"
        android:layout_below="@id/maxdays_text"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="1"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/maxhours_label"
        style="@style/LightTransparent.Text.LabelPortMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/maxhours_text"
        android:layout_toRightOf="@id/maxhours_text"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/hours" />

    <TextView
        android:id="@+id/maxmins_text"
        style="@style/LightTransparent.Text.ValuePortMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/maxdays_text"
        android:layout_below="@id/maxhours_text"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="1"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/maxmins_label"
        style="@style/LightTransparent.Text.LabelPortMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/maxmins_text"
        android:layout_toRightOf="@id/maxmins_text"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/mins" />

</RelativeLayout>